{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "*"
            ]
        },
        "lib": [
            "es5", "es6", "dom", "dom.iterable"
        ]
    },
    "include": [
        "*"
    ],
    "exclude": [
        "node_modules",
    ]
}